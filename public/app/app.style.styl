@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&display=swap&subset=cyrillic')

*
  margin 0
  padding 0
  outline none

ul
  list-style none

a
  text-decoration none
  
html, body, .container
  width 100%
  height 100%
  
body
  background #f2f2f2
  display flex
  flex-direction column
  align-items center

header
  height 70px
  width 100%

  h1
    font normal 1.5em/70px 'Open Sans'
    font-weight 400
    text-align center
    color #263238

.container
  width 50%

@media (max-width 720px)
  .container
    width 100%

@media (min-width: 721px max-width 1024px)
  .container
    width 70%
