.unclick-list

  li
    font normal .9em 'Open Sans'

    span
      width 50%

.controls
  display flex
  flex-direction column
  margin 10px 0

  .button-control
    width 100%
    height 30px
    display flex
    flex-direction row
    border-radius 5px
    background #78909C
    margin 5px 0

    .button
      display block
      padding 0 10px
      cursor pointer
      font normal .9em/30px 'Open Sans'
      color #ECEFF1
      width 100%
      border-radius 5px
      transition background 0.2s

      &:hover
        background #26A69A

      &.hover-red:hover
        background #ef5350

      span
        margin-left 10px

  .col-2
    .button
      width 50%

      &:first-child
        border-radius 5px 0 0 5px
        border-right solid 1px #eceff1

      &:last-child
        border-radius 0 5px 5px 0

@media (min-width 1024px)
  .controls
    display flex
    flex-direction row-reverse

    .margin-right-10
      margin-right 10px

    .width-30
      width 30%